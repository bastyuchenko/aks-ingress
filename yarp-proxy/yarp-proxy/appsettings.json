{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning",
            "Yarp": "Information"
        }
    },
    "AllowedHosts": "*",
    "ReverseProxy": {
        "Routes": {
            "app1-route": {
                "ClusterId": "app1-cluster",
                "Match": {
                    "Path": "/app1/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathRemovePrefix": "/app1"
                    }
                ]
            },
            "app2-route": {
                "ClusterId": "app2-cluster",
                "Match": {
                    "Path": "/app2/{**catch-all}"
                },
                "Transforms": [
                    {
                        "PathRemovePrefix": "/app2"
                    }
                ]
            },
            "app1-exact-route": {
                "ClusterId": "app1-cluster",
                "Match": {
                    "Path": "/app1"
                }
            },
            "app2-exact-route": {
                "ClusterId": "app2-cluster",
                "Match": {
                    "Path": "/app2"
                }
            }
        },
        "Clusters": {
            "app1-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://simple-app1-cluster-ip/"
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:30",
                        "Timeout": "00:00:05",
                        "Policy": "ConsecutiveFailures",
                        "Path": "/"
                    }
                }
            },
            "app2-cluster": {
                "Destinations": {
                    "destination1": {
                        "Address": "http://simple-app2-cluster-ip/"
                    }
                },
                "HealthCheck": {
                    "Active": {
                        "Enabled": true,
                        "Interval": "00:00:30",
                        "Timeout": "00:00:05",
                        "Policy": "ConsecutiveFailures",
                        "Path": "/"
                    }
                }
            }
        }
    }
}